<section id="news" class="mt-3">
    <div class="container-fluid">
        <div class="col-8 col-xs-6 mx-auto">
            <div class="row mx-auto text-center">
                <h1 class="title_blue mx-auto col-12">Les news : </h1>
                {% include 'partials/_separator.html.twig' %}
            </div>
            <div id="all_news" class="container">
            {% for new in news %}
                <div class="row mb-3">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-title">
                                <strong>Le {{ new.createdAt | date('d/m/Y Ã  H:m') }}</strong>  - {{ new.title }}
                            </p>
                            {% if new.picture %}
                                <div class="row align-items-center">
                                    <img src="{{ new.picture }}" alt="{{ new.title }}" class="col-4">
                                    <p class="card-text text-justify col-8">{{ new.content }}</p>
                                </div>
                            {% else %}
                                <p class="card-text text-justify">{{ new.content }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>

    </div>
</section>