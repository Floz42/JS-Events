<section class="container-fluid" id="slider_container">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="3000">
        <div class="carousel-inner">
            {% for image in images %}
            <div class="carousel-item {% if loop.first %}active{% endif %}">
                <img class="image_slider d-block w-100" src="{{'/images/slider/' ~ image.image }}" alt="Image slider">
            </div>
            {% endfor %}
        </div>
    </div>
</section>