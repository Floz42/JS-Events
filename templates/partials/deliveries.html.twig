<section class="container-fluid mt-5 p-3" id="deliveries">
    <div class="row mx-auto text-center">
        <h1 class="text-white mt-2 mx-auto col-12">Nos prestations :</h1>
        {% include 'partials/_separator_white.html.twig' %}
    </div>
    <div class="card-group">
    {% for delivery in deliveries %}
        <div class="col-4 mb-3 mx-auto">
            <div class="card">
                <img class="card-img-top" src="{{ asset('/images/deliveries/' ~ delivery.picture) }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ delivery.title }}</h5>
                    <i class="fas fa-arrow-circle-down fa-2x col text-center my-3"></i>
                    <div class="delivery_options">
                        {% for option in delivery.optionDeliveries %}
                            <p class="card-text">
                                • {{ option.title }}
                            </p>
                        {% endfor %}
                        <p class="card-text"><span class="btn btn-success mx-auto">Tarif : {{ delivery.price }}€</span></p>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>