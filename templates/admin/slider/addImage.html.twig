{% extends 'admin/base.html.twig' %}
{% block title %}Ajout/modification d'une image{% endblock %}

{% block body %}
    <div class="container">
        {% if exist %}
            <h2 class="mt-3 mb-3 text-center">Modifier une image : </h2>
        {% else %}
            <h2 class="mt-3 mb-3 text-center">Ajouter une image : </h2>
        {% endif %}
        <div class="form_add col-6 mx-auto p-3 border border-primary rounded">
            <div class="add_diplome mx-auto">
                {{ form_start(form) }}
                    <div class="mr-4">
                        {{ form_row(form.imageFile, {'label': 'Chemin de l\'image : (conseill√© 1000px/500px)'}) }}
                    </div>
                    <div>
                        <input type="submit" value="Valider" class="btn btn-outline-primary">
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}