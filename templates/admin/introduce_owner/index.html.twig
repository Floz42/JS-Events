{% extends 'admin/base.html.twig' %}

{% block title %}Gestion introduction{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-3 text-center">Gestion de la partie "introduction"</h1>
        <div class="col-md-8 mx-auto text-center">
            <img src="{{ asset('images/introduce/') ~ owner.picture }}" alt="Image de {{ owner.firstname }}" class="avatar_medium my-3">
            <h3 class="mb-3">{{ owner.firstname }} {{ owner.lastname }}</h3>
            <div class="mb-3"><i>{{owner.description | raw }}</i></div>
            <a href="{{ path('update_introduce_owner', {'id': owner.id})}}" class="btn btn-success mb-5">
                <i class="fas fa-pen mr-2"></i>
                Modifier
            </a>
        </div>
    </div>

{% endblock %}
